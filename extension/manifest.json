{
    "manifest_version" : 3,
    "name" : "BetterShinden",
    "version": "1.1.1",
    "author" : "MaGi5ter",
    "permissions": ["declarativeNetRequest", "declarativeNetRequestFeedback"],
    "description":"Szybsze i wygodniejsze korzystanie z shindena",
    "icons": {
      "16": "/icons/icon16.png",
      "32": "/icons/icon32.png",
      "48": "/icons/icon48.png",
      "128": "/icons/icon128.png"
    },
    "host_permissions": [
        "https://www.shinden.pl/*"
      ],
    "content_scripts": [
        {
            "run_at": "document_end",
            "matches": ["https://shinden.pl/*"],
            "js": ["content.js"]
        }
    ],
    "declarative_net_request": {
        "rule_resources": [
          {
            "id": "ruleset_1",
            "enabled": true,
            "path": "rules.json"
          }
        ]
    },
    "background": {
        "service_worker": "service_worker.js"
    }
}